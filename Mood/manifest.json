{
    "manifest_version":2,

    "name": "Sloth",
    "description": "This extension will help you destress",
    "version":"1.0",
    "content_scripts": [
    {
        "matches":["<all_urls>"],
        "js": ["jquery-1.4.2.js", "content.js"]
    }
    ],

    "permissions": ["activeTab", "notifications"],

    "browser_action": {
        "default_icon": "sloth.png",
        "default_popup":"popup.html"
    }
}